    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Test",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "dotenv/config", 
                "${workspaceRoot}/node_modules/.bin/jest", 
                "--runInBand",
                "--verbose",
                "${current relative file path of test you want to run}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Unit Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "dotenv/config", 
                "${workspaceRoot}/node_modules/.bin/jest", 
                "--runInBand",
                "--verbose",
                "__tests__/unit_tests"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Component Builders: Mock API",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "dotenv/config", 
                "${workspaceRoot}/node_modules/.bin/jest", 
                "--runInBand",
                "--verbose",
                "__tests__/component_builder_tests_with_mocks"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Component Builders: Live API",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "dotenv/config", 
                "${workspaceRoot}/node_modules/.bin/jest", 
                "--runInBand",
                "--verbose",
                "__tests__/live_gitlab_api_tests", 
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Full Test Suite",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "dotenv/config", 
                "${workspaceRoot}/node_modules/.bin/jest", 
                "--runInBand",
                "--verbose",
                "--detectOpenHandles",
                "__tests__/", 
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}